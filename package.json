{
  "name": "hexagon-js",
  "version": "2.1.0",
  "description": "A modular, themeable collection of components for modern browsers",
  "author": "James Smyth <james.smyth@ocado.com>",
  "contributors": [
    "Charlie Frater <charlie.frater@ocado.com>"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ocadotechnology/hexagonjs.git"
  },
  "publishConfig": {
    "tag": "latest"
  },
  "bugs": {
    "url": "https://github.com/ocadotechnology/hexagonjs/issues"
  },
  "homepage": "https://hexagonjs.io",
  "engines": {
    "node": ">=4.0.0"
  },
  "module": "dist/hexagon.es.js",
  "style": "dist/hexagon.css",
  "files": [
    "dist",
    "demo"
  ],
  "scripts": {
    "start": "run-p watch:* watch:css:* watch:demo:*",
    "dist": "run-p dist:* dist:css:* dist:demo:*",
    "clean": "rimraf coverage target dist demo",
    "lint": "eslint src test *.config.js rollup.configs.js",
    "prewatch": "npm run clean",
    "watch:browser-test-runner": "browser-test-runner start .",
    "watch:js": "node --max-old-space-size=4096 node_modules/.bin/rollup -w -c rollup.dev.config.js",
    "watch:assets": "npm run dist:assets -- -w",
    "watch:favicons": "npm run dist:favicons -- -w",
    "watch:css:bundle": "npm run dist:css:bundle -- -w",
    "watch:css:variables": "npm run dist:css:variables -- -w",
    "watch:css:print": "npm run dist:css:print -- -w",
    "watch:css:core": "npm run dist:css:core -- -w",
    "watch:css:theme": "npm run dist:css:theme -- -w",
    "watch:demo:css": "npm run dist:demo:css -- -w",
    "watch:demo:css-bundle": "npm run dist:demo:css-bundle -- -w",
    "watch:demo:assets": "npm run dist:demo:assets -- -w",
    "watch:demo:favicons": "npm run dist:demo:favicons -- -w",
    "watch:demo:html": "npm run dist:demo:html -- -w",
    "predist": "npm run clean",
    "dist:js": "node --max-old-space-size=4096 node_modules/.bin/rollup -c rollup.dist.config.js",
    "dist:assets": "cpx \"src/assets/*\" dist/assets",
    "dist:favicons": "cpx \"src/favicons/*\" dist/favicons",
    "dist:css:bundle": "postcss src/hexagon.css -o dist/hexagon.css",
    "dist:css:variables": "postcss src/hexagon.variables.css -o dist/hexagon.variables.css",
    "dist:css:print": "postcss src/hexagon.print.css -o dist/hexagon.print.css",
    "dist:css:core": "postcss src/hexagon.core.css -o dist/hexagon.core.css",
    "dist:css:theme": "postcss src/hexagon.theme.css -o dist/hexagon.theme.css",
    "dist:demo:css-bundle": "postcss src/hexagon.css -o demo/hexagon.css",
    "dist:demo:css": "postcss src/demo/index.css -o demo/index.css",
    "dist:demo:assets": "cpx \"src/assets/*\" demo/assets",
    "dist:demo:favicons": "cpx  \"src/favicons/*\" demo/favicons",
    "dist:demo:html": "cpx  src/demo/index.html demo",
    "postdist": "eslint dist/hexagon.js --no-eslintrc -c .eslintrc.catch-undefined.json --no-ignore",
    "test:js": "rollup -c rollup.test.config.js",
    "test": "run-s lint test-phantomjs",
    "test-saucelabs": "run-s test:js run-tests-saucelabs",
    "test-phantomjs": "run-s test:js run-local-tests:phantomjs",
    "test-chrome": "run-s test:js run-local-tests:chrome",
    "test-firefox": "run-s test:js run-local-tests:firefox",
    "test-safari": "run-s test:js run-local-tests:safari",
    "test-all": "run-s test:js all run-local-tests:*",
    "run-local-tests:phantomjs": "browser-test-runner phantomjs test/index.html",
    "run-local-tests:chrome": "browser-test-runner chrome test/index.html",
    "run-local-tests:safari": "browser-test-runner safari test/index.html",
    "run-local-tests:firefox": "browser-test-runner firefox test/index.html",
    "run-tests-saucelabs": "browser-test-runner saucelabs test/index.html",
    "upload-coverage": "cat coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "devDependencies": {
    "ajv": "^6.10.0",
    "browser-test-runner": "^0.7.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-spies-next": "^0.9.3",
    "coffeescript": "^2.4.1",
    "coveralls": "^3.0.3",
    "cpx": "^1.5.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.17.2",
    "mocha": "^6.1.4",
    "npm-run-all": "^4.1.5",
    "phantomjs-prebuilt": "^2.1.15",
    "postcss": "^7.0.14",
    "postcss-cli": "^6.1.2",
    "postcss-css-variables": "^0.12.0",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.6.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.10.1",
    "rollup-plugin-buble": "^0.19.6",
    "rollup-plugin-coffee-script": "^2.0.0",
    "rollup-plugin-eslint": "^5.1.0",
    "rollup-plugin-includepaths": "^0.2.3",
    "rollup-plugin-istanbul": "^2.0.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-progress": "^1.1.1",
    "rollup-pluginutils": "^2.6.0",
    "sinon": "^7.3.2"
  }
}
